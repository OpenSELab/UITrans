/*\n实现一个包含多个SwipeRefresher组件的页面，每个SwipeRefresher组件用于展示不同的加载状态。页面布局为一个垂直排列的列，包含三个SwipeRefresher组件。\n*/\n\n// 导入SwipeRefresher组件\nimport { SwipeRefresher } from '@kit.ArkUI';\n\n// 定义一个名为Index的组件，并将其标记为入口组件\n@Entry\n@Component\nstruct Index {\n  // 构建组件的UI结构\n  build() {\n    // 创建一个垂直排列的列组件\n    Column() {\n      // 第一个SwipeRefresher组件，显示“正在加载中”，并且处于加载状态\n      SwipeRefresher({\n        content: '正在加载中', // 显示的加载内容\n        isLoading: true // 是否处于加载状态\n      })\n      \n      // 第二个SwipeRefresher组件，不显示任何内容，但处于加载状态\n      SwipeRefresher({\n        content: '', // 不显示任何内容\n        isLoading: true // 是否处于加载状态\n      })\n      \n      // 第三个SwipeRefresher组件，显示“正在加载中”，但处于非加载状态\n      SwipeRefresher({\n        content: '正在加载中', // 显示的加载内容\n        isLoading: false // 是否处于加载状态\n      })\n    }\n  }\n}