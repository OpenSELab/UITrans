/*\n实现思路：\n本示例展示了如何使用ComposeTitleBar组件来创建带有标题、副标题和菜单项的标题栏。通过定义一个menuItem接口来描述菜单项的属性，并在Index组件中构建多个ComposeTitleBar实例，每个实例展示不同数量的菜单项。每个菜单项点击后会触发一个toast提示。\n总体功能与效果描述：\n该示例展示了四个不同配置的标题栏，每个标题栏包含标题、副标题和不同数量的菜单项。点击菜单项会显示一个toast提示。\n*/\n\n// Index.ets\n\n// 导入ComposeTitleBar组件和promptAction模块\nimport { ComposeTitleBar, promptAction } from '@kit.ArkUI';\n\n// 定义菜单项的接口，包含value（资源）、isEnabled（是否启用）和action（点击事件）\ninterface menuItem {\n  value: Resource;\n  isEnabled?: boolean;\n  action?: () => void;\n}\n\n// 主入口组件\n@Entry\n@Component\nstruct Index {\n  // 定义菜单项数组，每个菜单项包含一个图标资源、启用状态和点击事件\n  private menuItems: Array<menuItem> = [\n    {\n      value: $r('app.media.ic_public_save'), // 菜单项图标资源\n      isEnabled: true, // 菜单项启用状态\n      action: () => promptAction.showToast({ message: "show toast index 1" }) // 点击菜单项时显示toast提示\n    },\n    {\n      value: $r('app.media.ic_public_save'),\n      isEnabled: true,\n      action: () => promptAction.showToast({ message: "show toast index 1" })\n    },\n    {\n      value: $r('app.media.ic_public_save'),\n      isEnabled: true,\n      action: () => promptAction.showToast({ message: "show toast index 1" })\n    },\n    {\n      value: $r('app.media.ic_public_save'),\n      isEnabled: true,\n      action: () => promptAction.showToast({ message: "show toast index 1" })\n    },\n  ];\n\n  // 构建UI\n  build() {\n    Row() {\n      Column() {\n        // 添加分隔线\n        Divider().height(2).color(0xCCCCCC);\n\n        // 第一个ComposeTitleBar实例，包含标题、副标题和一个菜单项\n        ComposeTitleBar({\n          title: "标题", // 标题\n          subtitle: "副标题", // 副标题\n          menuItems: this.menuItems.slice(0, 1), // 菜单项数组，取第一个菜单项\n        });\n\n        // 添加分隔线\n        Divider().height(2).color(0xCCCCCC);\n\n        // 第二个ComposeTitleBar实例，包含标题、副标题和两个菜单项\n        ComposeTitleBar({\n          title: "标题",\n          subtitle: "副标题",\n          menuItems: this.menuItems.slice(0, 2), // 菜单项数组，取前两个菜单项\n        });\n\n        // 添加分隔线\n        Divider().height(2).color(0xCCCCCC);\n\n        // 第三个ComposeTitleBar实例，包含标题、副标题和所有菜单项\n        ComposeTitleBar({\n          title: "标题",\n          subtitle: "副标题",\n          menuItems: this.menuItems, // 菜单项数组，取所有菜单项\n        });\n\n        // 添加分隔线\n        Divider().height(2).color(0xCCCCCC);\n\n        // 第四个ComposeTitleBar实例，包含标题、副标题和一个自定义菜单项\n        ComposeTitleBar({\n          menuItems: [{ \n            isEnabled: true, \n            value: $r('app.media.ic_public_save'), // 菜单项图标资源\n            action: () => promptAction.showToast({ message: "show toast index 1" }) // 点击菜单项时显示toast提示\n          }],\n          title: "标题",\n          subtitle: "副标题",\n          item: { isEnabled: true, value: $r('app.media.app_icon') } // 自定义菜单项\n        });\n\n        // 添加分隔线\n        Divider().height(2).color(0xCCCCCC);\n      }\n    }.height('100%') // 设置Row的高度为100%\n  }\n}