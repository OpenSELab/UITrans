/*\n实现一个包含左侧和右侧元素的列表项组件，左侧显示图标、主文本、辅助文本和描述内容，右侧显示图标和文本。点击右侧图标时，会弹出一个提示信息。\n*/\n\n// 导入所需的组件和模块\nimport { IconType, ComposeListItem, promptAction } from '@kit.ArkUI';\n\n// 定义一个名为ComposeListItemExample的组件，并将其标记为入口组件\n@Entry\n@Component\nstruct ComposeListItemExample {\n  // 构建组件的UI结构\n  build() {\n    // 使用Column容器来垂直排列子组件\n    Column() {\n      // 创建一个列表组件\n      List() {\n        // 创建一个列表项\n        ListItem() {\n          // 使用ComposeListItem组件来构建列表项的内容\n          ComposeListItem({\n            // 定义左侧内容项\n            contentItem: ({\n              // 设置图标的样式为普通图标\n              iconStyle: IconType.NORMAL_ICON,\n              // 设置图标的资源路径\n              icon: $r('sys.media.ohos_app_icon'),\n              // 设置主文本内容\n              primaryText: '双行列表',\n              // 设置辅助文本内容\n              secondaryText: '辅助文字',\n              // 设置描述内容\n              description: '描述内容文字'\n            }),\n            // 定义右侧操作项\n            operateItem: ({\n              // 设置右侧图标的资源路径和点击事件\n              icon: {\n                value: $r('sys.media.ohos_app_icon'),\n                // 定义点击图标时的操作\n                action: () => {\n                  // 显示一个提示信息\n                  promptAction.showToast({ message: 'icon' });\n                }\n              },\n              // 设置右侧文本内容\n              text: '右侧文本'\n            })\n          })\n        }\n      }\n    }\n  }\n}